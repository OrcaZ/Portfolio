<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_label"
        android:text="My Nanodegree Apps!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/movie_app_button"
        android:text="Popular Movies"
        android:layout_below="@id/title_label"
        style="@style/app_button_style"
        android:background="#3F51B5"/>

    <Button
        android:id="@+id/alexandria_app_button"
        android:text="Alexandria"
        android:layout_below="@id/movie_app_button"
        style="@style/app_button_style"/>

    <Button
        android:id="@+id/scores_app_button"
        android:text="Football Scores"
        android:layout_below="@id/alexandria_app_button"
        style="@style/app_button_style"/>

    <Button
        android:id="@+id/build_it_bigger_app_button"
        android:text="Build It Bigger"
        android:layout_below="@id/scores_app_button"
        style="@style/app_button_style"/>

    <Button
        android:id="@+id/xyz_reader_app_button"
        android:text="XYZ Reader"
        android:layout_below="@id/build_it_bigger_app_button"
        style="@style/app_button_style"/>

    <Button
        android:id="@+id/capstone_app_button"
        android:text="Capstone: my own app"
        android:layout_below="@id/xyz_reader_app_button"
        style="@style/app_button_style"/>

</RelativeLayout>
